<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.univartois.sae.hopital.controller.MenuAjouterMedecinControleur">
    <center>
        <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" spacing="20.0">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <Label text="Nom : " />
                  <TextField fx:id="champNom" />
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Label text="Spécialisation : " />
                  <TextField fx:id="champSpecialisation" />
               </children>
            </HBox>
         </children>
        </VBox>
    </center>
    <top>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: #dcdcdc;" BorderPane.alignment="CENTER_LEFT">
            <children>
                <Label text="Ajouter un médecin" textAlignment="CENTER">
                    <font>
                        <Font size="30.0" />
                    </font>
                </Label>
            </children>
        </HBox>
    </top>
   <bottom>
      <HBox alignment="BOTTOM_CENTER" BorderPane.alignment="CENTER">
         <children>
                <Button mnemonicParsing="false" onAction="#onRetourButtonClick" style="-fx-border-color: red;" text="Retour">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" />
               </HBox.margin>
                </Button>
            <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="boutonAjouterMedecin" disable="true" mnemonicParsing="false" onAction="#onAjouterMedecinButtonClick" text="Ajouter le médecin">
               <HBox.margin>
                  <Insets bottom="10.0" right="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
