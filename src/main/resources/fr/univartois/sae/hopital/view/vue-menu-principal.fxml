<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="720.0" prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/11.0.14-internal"
            fx:controller="fr.univartois.sae.hopital.controller.MenuPrincipalControleur">
    <center>
        <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
              prefHeight="400.0" prefWidth="600.0" spacing="50.0">
            <children>
                <Button mnemonicParsing="false" onAction="#onMedecinButtonClick" text="Espace médecin">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Button>
                <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#onPatientButtonClick"
                        text="Espace patient">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Button>
                <Button fx:id="boutonChercher" layoutX="10.0" layoutY="35.0" mnemonicParsing="false"
                        onAction="#onChercherButtonClick" text="Chercher une personne">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Button>
            </children>
        </VBox>
    </center>
    <top>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: #dcdcdc;"
              BorderPane.alignment="CENTER_LEFT">
            <children>
                <Label text="Gestion de votre hôpital" textAlignment="CENTER">
                    <font>
                        <Font size="30.0"/>
                    </font>
                </Label>
            </children>
        </HBox>
    </top>
</BorderPane>
